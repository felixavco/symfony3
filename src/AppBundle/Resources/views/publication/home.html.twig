{% extends "AppBundle:Layouts:layout.html.twig" %}
{% block content %}
    <div id="timeline" class="container">
        <div class="col-lg-7 col-sm-12 box-default pull-left">
            <h2>Timeline</h2>
            <hr/>
            <div class="box-content">
                <h4>Publication list</h4>
            </div>
            
            <div class="box-content">
                {% for publication in pagination %}
                    {{publication.text}}
                    <hr/>
                {% endfor%}
            </div>
        </div>

        <div id="user-card" class="col-lg-4 col-sm-12 box-default pull-left">
            <div class="avatar">
                {% if app.user.image == null %}
                    <img src="{{asset('assets/images/default.png')}}">
                {% else %}
                    <img src="{{asset(app.user.image)}}">
                {% endif %}
            </div>
            
            <div class="name-surname">
                <a href="#">{{app.user.name}} {{app.user.lastname}}</a>
                <div class="clearfix"></div>
                <span class="nickname">
                    {{app.user.nick}}
                </span>
            </div>
            <div class="clearfix"></div>
        </div>
        <div id="new-publication" class="col-lg-4 col-sm-12 box-default pull-left">
            <h4>Create a Post</h4>
            <hr>
            {{form_start(form, {action: '', 'method':'POST'})}}
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}

